---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Animate from '../components/Animate.astro';
import { Icon } from 'astro-icon/components';
import { profile } from '../data/profile';

const title = "Skills & Experience - Philipp Petermeier";
const description = "Comprehensive overview of my technical skills, education, and professional experience in Data Science, Machine Learning, Economics and Energy Systems.";
---

<BaseLayout title={title} description={description}>
  <Navigation />

  <!-- Page Header -->
  <header class="bg-gradient-to-br from-primary-50 via-white to-primary-50 border-b border-primary-100">
    <div class="container-custom py-12 md:py-16">
      <Animate type="fade-up">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Skills & Experience
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl">
          Technical expertise, educational background, and professional experience
        </p>
      </Animate>
    </div>
  </header>

  <!-- Main Content with Sidebar -->
  <main class="min-h-screen">
    <div class="container-custom py-8 md:py-12">
      <div class="grid lg:grid-cols-[240px_1fr] gap-8 lg:gap-12">

        <!-- Sidebar Navigation -->
        <aside class="lg:sticky lg:top-24 h-fit">
          <Animate type="fade-in">
            <nav class="bg-white rounded-lg shadow-sm p-6 space-y-2">
              <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">
                Jump to
              </h2>
              <a href="#overview" class="block py-2 px-3 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors">
                Overview
              </a>
              <a href="#technical-skills" class="block py-2 px-3 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors">
                Skills
              </a>
              <a href="#experience" class="block py-2 px-3 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors">
                Experience
              </a>
              <a href="#education" class="block py-2 px-3 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors">
                Education
              </a>
              <a href="#interests" class="block py-2 px-3 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors">
                Interests & Ambitions
              </a>
            </nav>
          </Animate>
        </aside>

        <!-- Content Area -->
        <div class="space-y-8">

          <!-- Overview Section -->
          <section id="overview" class="scroll-mt-24">
            <Animate type="fade-up">
              <div class="bg-white rounded-lg shadow-sm p-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Overview</h2>

                <div class="prose prose-lg max-w-none mb-8 text-gray-700 space-y-4">
                  <p>
                    I'm a Software Engineer and Full Stack Developer, fascinated by systems of all kinds: biological, social, technological. How they work, why they fail, how they solve information flow and how we might design better ones.
                  </p>
                  <p>
                    Since my B.Sc., I'm interested in data, models, and software engineering, ranging from data science and machine learning to full stack web development and cloud computing.
                  </p>
                  <p>
                    I work best with researchers—clarifying ideas, focusing on concrete use cases, and making results accessible.
                  </p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                  {[
                    { name: "Data Flows", icon: "mdi:database-cog", description: "Databases, ORM, ETL Processes"},
                    { name: "Process Modeling", icon: "mdi:vector-polyline", description: "Business & Knowledge related" },
                    { name: "Machine Learning", icon: "mdi:brain", description: "Deep Learning, Predictive Analytics" },
                    { name: "Business Analytics", icon: "mdi:view-dashboard", description: "Data-Lakes, Warehouses,  Dashboards" }
                  ].map((area) => (
                    <div class="bg-gray-50 rounded-lg p-6 border border-gray-100 hover:border-primary-200 hover:shadow-md transition-all flex flex-col h-full min-h-[200px]">
                      <div class="text-primary-600 mb-3 flex justify-center">
                        <Icon name={area.icon} size={48} />
                      </div>
                      <h3 class="font-semibold text-gray-900 mb-2 text-center">{area.name}</h3>
                      <p class="text-sm text-gray-600 text-center flex-grow">{area.description}</p>
                    </div>
                  ))}
                </div>
              </div>
            </Animate>
          </section>

          <!-- Technical Skills Section -->
          <section id="technical-skills" class="scroll-mt-24">
            <Animate type="fade-up">
              <div class="bg-white rounded-lg shadow-sm p-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">Skills</h2>

                {profile.skills.map((category) => (
                  <div class="mb-8">
                    <h3 class="text-xl font-semibold text-gray-800 mb-4 border-b border-gray-200 pb-2">
                      {category.name}
                    </h3>
                    <div class="flex flex-wrap gap-3">
                      {category.items.map((skill) => (
                        <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-50 text-primary-700 rounded-lg border border-primary-200 hover:bg-primary-100 hover:border-primary-300 transition-colors">
                          <Icon name={skill.icon} size={20} />
                          <span class="font-medium">{skill.name}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                ))}

                <!-- Languages as third category -->
                <div class="mb-0">
                  <h3 class="text-xl font-semibold text-gray-800 mb-4 border-b border-gray-200 pb-2">
                    Languages
                  </h3>
                  <div class="flex flex-wrap gap-3">
                    <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-50 text-primary-700 rounded-lg border border-primary-200 hover:bg-primary-100 hover:border-primary-300 transition-colors">
                      <Icon name="circle-flags:de" size={20} />
                      <span class="font-medium">German</span>
                      <span class="text-primary-500 text-sm">(Native)</span>
                    </div>
                    <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-50 text-primary-700 rounded-lg border border-primary-200 hover:bg-primary-100 hover:border-primary-300 transition-colors">
                      <Icon name="circle-flags:uk" size={20} />
                      <span class="font-medium">English</span>
                      <span class="text-primary-500 text-sm">(Fluent)</span>
                    </div>
                  </div>
                </div>
              </div>
            </Animate>
          </section>

          <!-- Work Experience Section -->
          <section id="experience" class="scroll-mt-24">
            <Animate type="fade-up">
              <div class="bg-white rounded-lg shadow-sm p-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">Professional Experience</h2>

                {profile.work.map((job) => (
                  <div class="mb-8 last:mb-0 p-6 rounded-lg border border-gray-100 hover:border-primary-200 hover:shadow-md transition-all">
                    <div class="flex flex-col md:flex-row md:items-start gap-6">
                      <div class="flex-shrink-0">
                        <div class="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center">
                          <Icon name="mdi:briefcase" size={32} class="text-primary-600" />
                        </div>
                      </div>

                      <div class="flex-grow">
                        <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                          <div>
                            <h3 class="text-xl font-bold text-gray-900 mb-2">{job.position}</h3>
                            <p class="text-lg text-primary-600 font-medium">{job.company_name}</p>
                          </div>
                          <div class="text-left md:text-right mt-2 md:mt-0">
                            <p class="text-gray-600 font-medium text-sm">
                              {new Date(job.date_start).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })} -
                              {job.date_end ? new Date(job.date_end).toLocaleDateString('en-US', { year: 'numeric', month: 'short' }) : 'Present'}
                            </p>
                          </div>
                        </div>

                        <div class="prose prose-gray max-w-none mb-4">
                          <div class="whitespace-pre-line text-gray-700 leading-relaxed">{job.summary}</div>
                        </div>

                        {job.tags && job.tags.length > 0 && (
                          <div class="flex flex-wrap gap-2">
                            {job.tags.map((tag) => (
                              <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-medium">{tag}</span>
                            ))}
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </Animate>
          </section>
          <!-- Education Section -->
          <section id="education" class="scroll-mt-24">
            <Animate type="fade-up">
              <div class="bg-white rounded-lg shadow-sm p-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">Education</h2>

                {profile.education.map((edu) => (
                  <div class="mb-8 last:mb-0 p-6 rounded-lg border border-gray-100 hover:border-primary-200 hover:shadow-md transition-all">
                    <div class="flex flex-col md:flex-row md:items-start gap-6">
                      <div class="flex-shrink-0">
                        <div class="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center">
                          <Icon name="mdi:school" size={32} class="text-primary-600" />
                        </div>
                      </div>

                      <div class="flex-grow">
                        <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                          <div>
                            <h3 class="text-xl font-bold text-gray-900 mb-2">{edu.area}</h3>
                            <p class="text-lg text-primary-600 font-medium">{edu.institution}</p>
                          </div>
                          <div class="text-left md:text-right mt-2 md:mt-0">
                            <p class="text-gray-600 font-medium text-sm">
                              {new Date(edu.date_start).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })} -
                              {new Date(edu.date_end).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
                            </p>
                          </div>
                        </div>

                        <div class="prose prose-gray max-w-none mb-4">
                          <div class="whitespace-pre-line text-gray-700 leading-relaxed">{edu.summary}</div>
                        </div>

                        {edu.tags && edu.tags.length > 0 && (
                          <div class="flex flex-wrap gap-2 mb-4">
                            {edu.tags.map((tag) => (
                              <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-medium">{tag}</span>
                            ))}
                          </div>
                        )}

                        {edu.award && (
                          <div class="bg-green-50 border border-green-200 rounded-lg p-4 mt-4 mb-4">
                            <div class="flex items-center">
                              <Icon name="mdi:trophy" size={24} class="text-green-600 mr-3" />
                              <span class="text-green-800 font-medium">
                                {edu.award}
                              </span>
                            </div>
                          </div>
                        )}

                        {edu.award && (
                          <a
                            href="/uploads/Expose_BSC_for_Website.pdf"
                            class="btn btn-outline inline-flex items-center gap-2"
                            download
                            target="_blank"
                          >
                            <Icon name="mdi:file-download" size={20} />
                            Download Thesis Exposé
                          </a>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </Animate>
          </section>

          <!-- Research Interests Section -->
          <section id="interests" class="scroll-mt-24">
            <Animate type="fade-up">
              <div class="bg-white rounded-lg shadow-sm p-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">Interests & Ambitions</h2>

                <div class="flex flex-wrap gap-3">
                  {profile.interests.map((interest) => (
                    <div class="px-4 py-2 bg-primary-50 text-primary-700 rounded-full border border-primary-200 hover:bg-primary-100 hover:border-primary-300 transition-colors font-medium">
                      {interest}
                    </div>
                  ))}
                </div>
              </div>
            </Animate>
          </section>

        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Smooth scroll offset for fixed header */
  .scroll-mt-24 {
    scroll-margin-top: 6rem;
  }
</style>

<script>
  // Active section highlighting in sidebar
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('aside nav a');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.getAttribute('id');
            navLinks.forEach((link) => {
              link.classList.remove('bg-primary-100', 'text-primary-700', 'font-semibold');
              if (link.getAttribute('href') === `#${id}`) {
                link.classList.add('bg-primary-100', 'text-primary-700', 'font-semibold');
              }
            });
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '-120px 0px -40% 0px'
      }
    );

    sections.forEach((section) => observer.observe(section));
  });
</script>
